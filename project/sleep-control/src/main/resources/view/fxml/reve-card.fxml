<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.sleepcontrol.controller.ReveCardController"
      styleClass="reve-card"
      stylesheets="@../styles/styles.css"
      maxWidth="300.0"
      prefWidth="300.0"
      spacing="8.0">

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="titreLabel" styleClass="reve-titre" wrapText="true" />
    </HBox>

    <Label fx:id="typeLabel" styleClass="type-label" />

    <Separator />

    <Label fx:id="descriptionLabel" styleClass="reve-description" wrapText="true" />

    <Label fx:id="humeurLabel" styleClass="info-label" />

    <HBox alignment="CENTER_LEFT" spacing="5.0">
        <Label styleClass="info-label" text="Intensite: " />
        <ProgressBar fx:id="intensiteBar" prefWidth="90.0" />
        <Label fx:id="intensiteValue" styleClass="info-label" />
    </HBox>

    <Label fx:id="anxieteLabel" styleClass="info-label" />

    <HBox alignment="CENTER_LEFT" spacing="5.0">
        <Label fx:id="couleurBadge" text="Couleur"
               styleClass="badge, badge-couleur"
               visible="false" managed="false" />

        <Label fx:id="recurrentBadge" text="Recurrent"
               styleClass="badge, badge-recurrent"
               visible="false" managed="false" />

        <Label fx:id="lucideBadge" text="Lucide"
               styleClass="badge, badge-lucide"
               visible="false" managed="false" />
    </HBox>

    <Label fx:id="emotionsLabel" styleClass="emotions-label"
           managed="false" visible="false" wrapText="true" />

    <HBox alignment="CENTER" spacing="8.0">
        <Button fx:id="btnVoir" text="Voir" styleClass="btn-voir" />
        <Button fx:id="btnModifier" text="Modifier" styleClass="btn-modifier" />
        <Button fx:id="btnSupprimer" text="X" styleClass="btn-supprimer" />
    </HBox>

</VBox>
