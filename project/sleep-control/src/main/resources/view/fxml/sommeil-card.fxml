<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.sleepcontrol.controller.SommeilCardController"
      styleClass="card"
      stylesheets="@../styles/styles.css"
      maxWidth="280.0"
      prefWidth="280.0"
      spacing="8.0">

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>

    <!-- En-tête avec date et qualité -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="dateLabel" styleClass="card-title" />
        <Label fx:id="qualiteLabel" styleClass="type-label" />
    </HBox>

    <!-- Séparateur -->
    <Separator />

    <!-- Informations principales -->
    <Label fx:id="heuresLabel" styleClass="card-info" />
    <Label fx:id="dureeLabel" styleClass="card-info" />
    <Label fx:id="interruptionsLabel" styleClass="card-info" />
    <Label fx:id="humeurLabel" styleClass="card-info" />
    <Label fx:id="revesLabel" styleClass="card-info-secondary" />

    <!-- Score -->
    <Label fx:id="scoreLabel" styleClass="score-label" />

    <!-- Boutons d'action -->
    <HBox alignment="CENTER" spacing="8.0">
        <Button fx:id="btnVoir" text="Voir" styleClass="btn-primary, btn-sm" />
        <Button fx:id="btnModifier" text="Modifier" styleClass="btn-warning" />
        <Button fx:id="btnSupprimer" text="X" styleClass="btn-danger" />
    </HBox>

</VBox>
