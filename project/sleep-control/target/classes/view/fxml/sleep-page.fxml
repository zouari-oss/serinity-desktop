<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.sleepcontrol.controller.SommeilController"
      fx:id="mainContainer"
      stylesheets="@../styles/styles.css"
      spacing="18.0"
      style="-fx-background-color: #f5f7fa;">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18" />
    </padding>

    <!-- En-tête -->
    <HBox alignment="CENTER_LEFT" spacing="12.0">
        <Label text="Gestion du Sommeil" styleClass="page-header" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnAjouter"
                text="+ Ajouter Sommeil"
                styleClass="btn-primary"
                onAction="#ajouterSommeil" />
        <Button fx:id="btnRefresh"
                text="⟳ Rafraichir"
                styleClass="btn-secondary"
                onAction="#rafraichir" />
    </HBox>

    <!-- Filtres -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="filter-container">
        <padding>
            <Insets top="12" right="12" bottom="12" left="12" />
        </padding>

        <TextField fx:id="searchField"
                   prefWidth="280.0"
                   promptText="Rechercher..."
                   styleClass="form-control" />

        <Label text="Qualité:" styleClass="form-label" />
        <ComboBox fx:id="filterQualite"
                  prefWidth="140.0"
                  promptText="Sélectionner"
                  styleClass="combo-box" />

        <Label text="Trier par:" styleClass="form-label" />
        <ComboBox fx:id="sortComboBox"
                  prefWidth="160.0"
                  promptText="Sélectionner"
                  styleClass="combo-box" />
    </HBox>

    <!-- Zone statistiques dynamique -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="stats-container">
        <padding>
            <Insets top="12" right="12" bottom="12" left="12" />
        </padding>

        <!-- Total nuits -->
        <Label fx:id="totalNuitsLabel"
               text="Total: 0 nuits"
               styleClass="stat-badge-primary" />

        <!-- Durée moyenne -->
        <Label fx:id="dureeMoyLabel"
               text="Durée moyenne: -- h"
               styleClass="stat-badge-info" />

        <!-- Score moyen avec barre -->
        <HBox alignment="CENTER_LEFT" spacing="8.0">
            <ProgressBar fx:id="scoreMoyBar" prefWidth="160.0" />
            <Label fx:id="scoreMoyLabel"
                   text="Score moyen: --/10"
                   styleClass="stats-label" />
        </HBox>
    </HBox>

    <!-- Liste des cartes -->
    <ScrollPane fitToWidth="true"
                styleClass="cards-scroll-pane"
                VBox.vgrow="ALWAYS">
        <FlowPane fx:id="cardsContainer"
                  hgap="15.0"
                  vgap="15.0"
                  styleClass="cards-flow-pane">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8" />
            </padding>
        </FlowPane>
    </ScrollPane>

</VBox>
