<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serinity.sleepcontrol.controller.SommeilFormController">

    <VBox spacing="12.0" style="-fx-background-color: white;">

        <padding>
            <Insets bottom="20" left="30" right="30" top="20" />
        </padding>

        <!-- Titre -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Formulaire Sommeil" />

        <Separator />

        <!-- Date de nuit -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Date de nuit *" />
            <DatePicker fx:id="dateNuitPicker" prefWidth="250.0" />
        </VBox>

        <!-- Heures de coucher -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Heure de coucher *" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Spinner fx:id="heureCoucherHeure" editable="true" prefWidth="80.0" />
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text=":" />
                <Spinner fx:id="heureCoucherMinute" editable="true" prefWidth="80.0" />
            </HBox>
        </VBox>

        <!-- Heures de réveil -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Heure de reveil *" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Spinner fx:id="heureReveilHeure" editable="true" prefWidth="80.0" />
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text=":" />
                <Spinner fx:id="heureReveilMinute" editable="true" prefWidth="80.0" />
            </HBox>
        </VBox>

        <!-- Qualité -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Qualite du sommeil *" />
            <ComboBox fx:id="qualiteCombo" prefWidth="250.0" promptText="Selectionner..." />
        </VBox>

        <!-- Interruptions -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Nombre d'interruptions" />
            <Spinner fx:id="interruptionsSpinner" editable="true" prefWidth="150.0" />
        </VBox>

        <!-- Humeur au réveil -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Humeur au reveil *" />
            <ComboBox fx:id="humeurCombo" prefWidth="250.0" promptText="Selectionner..." />
        </VBox>

        <!-- Environnement -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Environnement *" />
            <ComboBox fx:id="environnementCombo" prefWidth="250.0" promptText="Selectionner..." />
        </VBox>

        <!-- Température -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Temperature (C)" />
            <Spinner fx:id="temperatureSpinner" editable="true" prefWidth="150.0" />
        </VBox>

        <!-- Niveau de bruit -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Niveau de bruit *" />
            <ComboBox fx:id="bruitCombo" prefWidth="250.0" promptText="Selectionner..." />
        </VBox>

        <!-- Commentaire -->
        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Commentaire" />
            <TextArea fx:id="commentaireArea" prefHeight="80.0" promptText="Ajoutez un commentaire sur votre nuit..." wrapText="true" />
        </VBox>

        <Separator />

        <!-- Boutons -->
        <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="43.0" prefWidth="123.0" style="-fx-background-color: #e9f6f6; -fx-padding: 10 25; -fx-font-size: 14 px; -fx-background-radius: 4;" text="Annuler" textAlignment="CENTER">
            <font>
               <Font size="15.0" />
            </font>
         </Button>
            <Button fx:id="btnSave" onAction="#sauvegarder" style="-fx-background-color: #1f5f63; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14px; -fx-background-radius: 5;" text="Sauvegarder">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.912553608417511" green="0.9368420839309692" blue="0.9238882660865784" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="1.0" green="1.0" blue="1.0" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill></Button>
        </HBox>

        <Label style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-style: italic;" text="* Champs obligatoires" />

    </VBox>

</ScrollPane>
