<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.serinity.forumcontrol.Controllers.StatisticsController"
      spacing="20"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button text="â¬… Back"
                onAction="#onBack"
                style="-fx-background-color: transparent; -fx-text-fill: #2196F3; -fx-font-size: 14; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #2196F3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 15;"/>

        <Label text="ðŸ“Š Forum Statistics"
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="ðŸ”„ Refresh"
                onAction="#onRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </HBox>

    <Separator/>

    <!-- Statistics Container -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="20" style="-fx-padding: 10;">

                <!-- Overview Cards Row -->
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <!-- Total Threads Card -->
                    <VBox GridPane.columnIndex="0"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                        <Label text="ðŸ“ Total Threads"
                               style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        <Label fx:id="totalThreadsLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                    </VBox>

                    <!-- Total Replies Card -->
                    <VBox GridPane.columnIndex="1"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                        <Label text="ðŸ’¬ Total Replies"
                               style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        <Label fx:id="totalRepliesLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    </VBox>

                    <!-- Total Users Card -->
                    <VBox GridPane.columnIndex="2"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                        <Label text="ðŸ‘¥ Total Users"
                               style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        <Label fx:id="totalUsersLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                    </VBox>

                    <!-- Total Categories Card -->
                    <VBox GridPane.columnIndex="3"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                        <Label text="ðŸ·ï¸ Total Categories"
                               style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        <Label fx:id="totalCategoriesLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #9C27B0;"/>
                    </VBox>
                </GridPane>

                <!-- Charts Row 1: Status and Type Pie Charts -->
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- Thread Status Pie Chart -->
                    <VBox GridPane.columnIndex="0"
                          spacing="10"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                        <Label text="Thread Status Distribution"
                               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                        <PieChart fx:id="statusPieChart"
                                  legendVisible="true"
                                  prefHeight="300"
                                  style="-fx-background-color: white;"/>
                    </VBox>

                    <!-- Thread Type Pie Chart -->
                    <VBox GridPane.columnIndex="1"
                          spacing="10"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                        <Label text="Thread Type Distribution"
                               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                        <PieChart fx:id="typePieChart"
                                  legendVisible="true"
                                  prefHeight="300"
                                  style="-fx-background-color: white;"/>
                    </VBox>
                </GridPane>

                <!-- Charts Row 2: Threads Over Time Line Chart -->
                <VBox spacing="10"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label text="ðŸ“ˆ Threads Created (Last 30 Days)"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <LineChart fx:id="threadsLineChart"
                               prefHeight="300"
                               legendVisible="false"
                               style="-fx-background-color: white;">
                        <xAxis>
                            <CategoryAxis fx:id="dateAxis" label="Date" side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="countAxis" label="Number of Threads" side="LEFT"/>
                        </yAxis>
                    </LineChart>
                </VBox>

                <!-- Charts Row 3: Top Users Bar Chart -->
                <VBox spacing="10"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label text="ðŸ† Top 10 Most Active Users"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <BarChart fx:id="topUsersBarChart"
                              prefHeight="350"
                              legendVisible="false"
                              style="-fx-background-color: white;"
                              barGap="3"
                              categoryGap="20">
                        <xAxis>
                            <CategoryAxis fx:id="usernameAxis" label="Username" side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="activityAxis" label="Posts + Replies" side="LEFT"/>
                        </yAxis>
                    </BarChart>
                </VBox>

                <!-- User Activity -->
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label text="ðŸ‘¤ User Activity"
                           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <HBox spacing="40">
                        <VBox spacing="5">
                            <Label text="Active Today"
                                   style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                            <Label fx:id="activeTodayLabel"
                                   text="0 users"
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Active This Week"
                                   style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                            <Label fx:id="activeWeekLabel"
                                   text="0 users"
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Interactions -->
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label text="â­ Interactions"
                           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <HBox spacing="40">
                        <VBox spacing="5">
                            <Label text="ðŸ‘ Total Likes"
                                   style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                            <Label fx:id="totalLikesLabel"
                                   text="0"
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="ðŸ‘Ž Total Dislikes"
                                   style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                            <Label fx:id="totalDislikesLabel"
                                   text="0"
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #f44336;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="â­ Total Follows"
                                   style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                            <Label fx:id="totalFollowsLabel"
                                   text="0"
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                        </VBox>
                    </HBox>
                </VBox>

            </VBox>
        </content>
    </ScrollPane>

</VBox>
