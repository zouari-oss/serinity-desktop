<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootCard"
      styleClass="category-card"
      spacing="10"
      style="-fx-background-color: white;
             -fx-padding: 20;
             -fx-background-radius: 12;
             -fx-border-radius: 12;
             -fx-border-color: #dddddd;
             -fx-border-width: 1;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.serinity.forumcontrol.Controllers.CategoryCardController">

    <!-- Header with Parent Info and Menu -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lfoukLabel"
               style="-fx-text-fill: #666;
                      -fx-font-size: 12;"
               HBox.hgrow="ALWAYS" />

        <Region HBox.hgrow="ALWAYS"/>

        <MenuButton fx:id="menuButton"
                    text="â‹®"
                    style="-fx-background-color: transparent;
                           -fx-font-size: 20;
                           -fx-font-weight: bold;
                           -fx-text-fill: #666;
                           -fx-cursor: hand;"
                    onMouseClicked="#handleMenuClick">
        </MenuButton>
    </HBox>

    <!-- Category Name (Big and Bold) -->
    <Label fx:id="titleLabel"
           wrapText="true"
           style="-fx-font-size: 18;
                  -fx-font-weight: bold;
                  -fx-text-fill: #333;"/>

    <!-- Slug Label -->
    <Label fx:id="slugLabel"
           wrapText="true"
           style="-fx-font-size: 13;
                  -fx-text-fill: #2196F3;
                  -fx-font-style: italic;"/>

    <!-- Description -->
    <Label fx:id="metaLabel"
           wrapText="true"
           maxHeight="60"
           style="-fx-text-fill: #666;
                  -fx-font-size: 13;"/>

</VBox>
