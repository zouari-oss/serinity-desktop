<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.serinity.moodcontrol.controller.JournalController"
           styleClass="mood-root">

    <BorderPane fx:id="pageRoot" styleClass="mood-root">

        <top>
            <VBox spacing="12" styleClass="history-top">
                <padding>
                    <Insets top="18" right="16" bottom="10" left="16"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="%journal.title" styleClass="page-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="%journal.new"
                            styleClass="btn-primary"
                            onAction="#onNew"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="history-filters">
                    <Label text="%journal.hint" styleClass="filter-label"/>
                </HBox>
            </VBox>
        </top>

        <center>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="history-scroll">
                <content>
                    <VBox fx:id="journalBox"
                          spacing="14"
                          styleClass="history-timeline">
                        <padding>
                            <Insets top="10" right="16" bottom="18" left="16"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </center>

    </BorderPane>

    <!-- overlay -->
    <StackPane fx:id="overlay"
               styleClass="overlay-dim"
               visible="false"
               managed="false"/>

    <!-- editor host -->
    <StackPane fx:id="editorHost"
               visible="false"
               managed="false"/>

</StackPane>
