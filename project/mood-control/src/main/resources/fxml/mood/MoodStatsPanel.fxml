<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.moodcontrol.controller.MoodStatsPanelController"
      spacing="12"
      styleClass="stats-panel">

    <!-- Non-visual definitions -->
    <fx:define>
        <ToggleGroup fx:id="tabGroup"/>
    </fx:define>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="stats-header">
        <padding>
            <Insets top="16" right="16" bottom="6" left="16"/>
        </padding>

        <Label text="Statistics" styleClass="panel-title"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnClose"
                text="âœ•"
                onAction="#onClose"
                styleClass="btn-ghost"/>
    </HBox>

    <!-- Chart area -->
    <StackPane fx:id="chartHost" styleClass="stats-chart-host">
        <padding>
            <Insets top="0" right="16" bottom="0" left="16"/>
        </padding>

        <!-- Pie Chart-->
        <PieChart fx:id="pieChart"
                  visible="true"
                  managed="true"
                  legendVisible="false"
                  labelsVisible="true"
                  title="Mood by Moment"/>

        <!-- Bar Chart -->
        <BarChart fx:id="barChart"
                  visible="false"
                  managed="false"
                  legendVisible="false"
                  title="Mood by Day">
            <xAxis>
                <CategoryAxis fx:id="barXAxis" label="Date"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="barYAxis" label="Mood level" lowerBound="1" upperBound="5" tickUnit="1"/>
            </yAxis>
        </BarChart>

        <!-- Line Chart-->
        <LineChart fx:id="lineChart"
                   visible="false"
                   managed="false"
                   createSymbols="true"
                   title="Mood total">
            <xAxis>
                <CategoryAxis fx:id="lineXAxis" label="Date"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="lineYAxis" label="Mood level" lowerBound="1" upperBound="5" tickUnit="1"/>
            </yAxis>
        </LineChart>

        <!-- No-data overlay -->
        <Label fx:id="lblNoData"
               text="No data for selected filters."
               visible="false"
               managed="false"
               styleClass="stats-nodata"/>
    </StackPane>

    <!-- Bottom buttons -->
    <HBox alignment="CENTER" spacing="10" styleClass="stats-tabs">
        <padding>
            <Insets top="0" right="16" bottom="16" left="16"/>
        </padding>

        <ToggleButton fx:id="tabMoment"
                      text="Mood By Moment"
                      toggleGroup="$tabGroup"
                      selected="true"
                      onAction="#onSelectMoment"
                      styleClass="seg-btn"/>

        <ToggleButton fx:id="tabDay"
                      text="Mood By Day"
                      toggleGroup="$tabGroup"
                      onAction="#onSelectDay"
                      styleClass="seg-btn"/>

        <ToggleButton fx:id="tabTotal"
                      text="Mood Total"
                      toggleGroup="$tabGroup"
                      onAction="#onSelectTotal"
                      styleClass="seg-btn"/>
    </HBox>

</VBox>