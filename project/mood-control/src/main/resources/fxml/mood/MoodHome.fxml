<BorderPane xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.serinity.moodcontrol.controller.MoodHomeController"
  styleClass="mood-root">

  <!-- ===== HEADER ===== -->
