<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.exercicecontrol.controller.ExerciseSessionController"
      spacing="16"
      styleClass="page-root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="← Retour" onAction="#onBack" styleClass="secondary-btn"/>
        <Label text="Session" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblStatus" styleClass="muted-text" text="Prêt"/>
    </HBox>

    <VBox styleClass="card" spacing="10">
        <Label fx:id="lblTitle" style="-fx-font-size: 18px; -fx-font-weight: 900;" text="Titre"/>
        <Label fx:id="lblMeta" styleClass="muted-text" text="Type • Niveau • Durée"/>
    </VBox>

    <VBox styleClass="card" spacing="14">
        <Label text="Temps restant" style="-fx-font-weight: 900; -fx-font-size: 13px;"/>
        <Label fx:id="lblTimer"
               text="00:00"
               style="-fx-font-size: 44px; -fx-font-weight: 900;"/>

        <HBox spacing="10">
            <Button fx:id="btnStart" text="Démarrer" onAction="#onStart" styleClass="primary-btn"/>
            <Button fx:id="btnPause" text="Pause" onAction="#onPause" styleClass="secondary-btn" disable="true"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnFinish" text="Terminer" onAction="#onFinish" styleClass="danger-btn" disable="true"/>
        </HBox>
    </VBox>

    <VBox styleClass="card" spacing="10">
        <Label text="Feedback (optionnel)" style="-fx-font-weight: 900; -fx-font-size: 13px;"/>
        <TextArea fx:id="txtFeedback" promptText="Comment s’est passée la session ?" prefRowCount="3"/>
    </VBox>

</VBox>
