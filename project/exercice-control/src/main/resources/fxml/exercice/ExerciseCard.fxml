<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.exercicecontrol.controller.ExerciseCardController"
      styleClass="exercise-card"
      spacing="10"
      prefWidth="320">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <!-- Top -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblTitle" text="Titre" styleClass="exercise-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblBadge" text="Niveau 3" styleClass="badge"/>
    </HBox>

    <!-- Meta -->
    <VBox spacing="6">
        <Label fx:id="lblType" text="Type : -" styleClass="exercise-meta"/>
        <Label fx:id="lblDuration" text="DurÃ©e : - min" styleClass="exercise-meta"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <!-- Actions -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Voir" onAction="#onOpenDetails" styleClass="secondary-btn"/>
        <Button text="Modifier" onAction="#onEdit" styleClass="secondary-btn"/>
        <Button text="Supprimer" onAction="#onDelete" styleClass="danger-btn"/>
    </HBox>

</VBox>
