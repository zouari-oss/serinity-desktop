<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.exercicecontrol.controller.ExerciseCardController"
      styleClass="exercise-card"
      spacing="10"
      prefWidth="320">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <!-- Top -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblTitle"
               text="Titre"
               styleClass="exercise-title"
               wrapText="false"
               maxWidth="220"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblBadge" text="Niveau 3" styleClass="badge"/>
    </HBox>

    <!-- Meta -->
    <VBox spacing="6">
        <Label fx:id="lblType" text="Type : -" styleClass="exercise-meta"/>
        <Label fx:id="lblDuration" text="Durée : - min" styleClass="exercise-meta"/>
    </VBox>

    <!-- Actions (admin-only for edit/delete) -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Voir" onAction="#onOpenDetails" styleClass="secondary-btn"/>

        <!-- ✅ fx:id ajouté -->
        <Button fx:id="btnEdit"
                text="Modifier"
                onAction="#onEdit"
                styleClass="secondary-btn"/>

        <!-- ✅ fx:id ajouté -->
        <Button fx:id="btnDelete"
                text="Supprimer"
                onAction="#onDelete"
                styleClass="danger-btn"/>
    </HBox>

</VBox>