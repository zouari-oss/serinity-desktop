<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <!-- Hibernate properties -->
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <!-- !Hibernate properties -->

    <!-- Entity classes -->
    <mapping class="com.serinity.accesscontrol.model.User" />
    <mapping class="com.serinity.accesscontrol.model.Profile" />
    <mapping class="com.serinity.accesscontrol.model.AuditLog" />
    <mapping class="com.serinity.accesscontrol.model.AuthSession" />
    <mapping class="com.serinity.accesscontrol.model.base.IdentifiableEntity" />
    <mapping class="com.serinity.accesscontrol.model.base.TimestampedEntity" />
    <!-- !Entity classes -->
  </session-factory>
</hibernate-configuration>
