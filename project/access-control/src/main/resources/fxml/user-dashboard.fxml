<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serinity.accesscontrol.controller.UserDashboardController">

  <VBox layoutX="14.0" layoutY="14.0">
    <children>
      <!-- Welcome -->
      <Label fx:id="welcomeLabel" styleClass="welcome-label" text="%dashboard.welcome" />

      <!-- Subtitle -->
      <Label fx:id="welcomeSubtitleLabel" styleClass="welcome-subtitle" text="%dashboard.subtitle" />
    </children>
  </VBox>

  <!-- Profile completion section -->
  <VBox layoutX="14.0" layoutY="664.0" spacing="5.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0">
    <Label styleClass="profile-completion-title" text="Profile Completion" />

    <ProgressBar fx:id="profileCompletionBar" prefWidth="350.0" progress="0.0" />

    <Label fx:id="profileCompletionLabel" style="-fx-font-size: 12px;" styleClass="profile-percentage-label" text="0%" />
  </VBox>

  <!-- Right Side Edit Panel -->
  <VBox prefWidth="400.0" spacing="15.0" styleClass="edit-profile-panel" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

    <!-- Title -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Edit Profile" />

    <Separator />

    <!-- Profile Image Section -->
    <VBox alignment="CENTER" spacing="8.0">
      <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" preserveRatio="false" />

      <Button fx:id="browseImageButton" onAction="#onBrowseImage" styleClass="btn-secondary" text="Browse Image" />
    </VBox>

    <Separator />

    <!-- Form Fields -->
    <TextField fx:id="firstNameTextField" promptText="First Name" />
    <TextField fx:id="lastNameTextField" promptText="Last Name" />
    <TextField fx:id="usernameTextField" promptText="Username" />
    <TextField fx:id="phoneTextField" promptText="Phone" />

    <ComboBox fx:id="genderComboBox" promptText="Gender" />

    <TextField fx:id="countryTextField" promptText="Country" />
    <TextField fx:id="stateTextField" promptText="State" />

    <TextArea fx:id="aboutMeTextArea" prefRowCount="3" promptText="About Me" wrapText="true" />

    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
      <Button fx:id="cancelButton" onAction="#onCancelButtonAction" styleClass="btn-secondary" text="Cancel" />

      <Button fx:id="saveButton" onAction="#onSaveButtonAction" styleClass="btn-primary" text="Save" />
    </HBox>

  </VBox>
  <stylesheets>
    <URL value="@../styles/styles.css" />
    <URL value="@../styles/user-dashboard.css" />
  </stylesheets>

</AnchorPane>
