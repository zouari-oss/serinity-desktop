              </cursor>
              <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true"
                  styleClass="loginIconImageView">
                  <image>
                    <Image url="@../assets/login/icons8-login-30.png" />
                  </image>
                </ImageView>
              </graphic>
            </Button>
          </children>
        </Group>
      </children>
    </Pane>
