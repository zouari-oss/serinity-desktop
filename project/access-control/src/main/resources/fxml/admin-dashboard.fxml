<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="app-bg"
  xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.serinity.accesscontrol.controller.AdminDashboardController">

  <children>

    <VBox prefWidth="220.0" spacing="20" styleClass="sidebar" AnchorPane.bottomAnchor="0.0"
      AnchorPane.topAnchor="0.0">

      <VBox alignment="CENTER" spacing="10">
        <ImageView fitHeight="90.0" fitWidth="90.0" preserveRatio="true">
          <image>
            <Image url="@../assets/root/serinity-logo-without-bg-and-app-name.png" />
          </image>
        </ImageView>

        <Label styleClass="logo" text="SERINITY" />
      </VBox>

      <Button fx:id="overviewButton" onAction="#onOverviewButtonAction" styleClass="sidebar-btn"
        text="Overview" />

      <Button fx:id="usersManagmentButton" onAction="#onUsersManagmentButtonAction"
        styleClass="sidebar-btn" text="Users Management" />

      <Button fx:id="profileAndSettingsButton" onAction="#onProfileAndSettingsButtonAction"
        styleClass="sidebar-btn" text="Profile &amp; Settings" />

      <Pane VBox.vgrow="ALWAYS" />

      <Button fx:id="logoutButton" onAction="#onLogoutButtonAction" styleClass="logout-btn"
        text="Logout" />

    </VBox>

    <HBox prefHeight="60.0" styleClass="header" AnchorPane.leftAnchor="220.0"
      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

      <Label fx:id="pageTitleLabel" styleClass="header-title" text="Dashboard Overview" />
    </HBox>

    <StackPane fx:id="contentAreaStackPane" styleClass="content-area" AnchorPane.bottomAnchor="0.0"
      AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0" />

  </children>

  <stylesheets>
    <URL value="@../styles/styles.css" />
    <URL value="@../styles/admin-dashboard.css" />
  </stylesheets>

</AnchorPane>
