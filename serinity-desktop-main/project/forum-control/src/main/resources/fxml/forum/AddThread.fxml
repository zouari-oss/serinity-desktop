<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.serinity.forumcontrol.Controllers.AddThreadController"
      spacing="15" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="headerLabel" text="Create New Thread"
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    </HBox>

    <Separator/>

    <!-- Form Container -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">

        <!-- Title Field -->
        <VBox spacing="5">
            <Label text="Title *" style="-fx-font-weight: bold;">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <TextField fx:id="titleField" promptText="Enter thread title..."
                       style="-fx-font-size: 14;">
                <padding>
                    <Insets top="8" right="10" bottom="8" left="10"/>
                </padding>
            </TextField>
        </VBox>

        <!-- Category Dropdown -->
        <VBox spacing="5">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Category *" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <Button text="ðŸ”„ Refresh" onAction="#refreshCategories"
                        style="-fx-font-size: 10; -fx-padding: 2 8 2 8;"/>
            </HBox>
            <ComboBox fx:id="categoryBox" promptText="Select a category..."
                      maxWidth="Infinity" prefWidth="Infinity"
                      style="-fx-font-size: 14;"/>
        </VBox>

        <!-- Thread Type Dropdown -->
        <VBox spacing="5">
            <Label text="Thread Type *" style="-fx-font-weight: bold;">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <ComboBox fx:id="typeBox" promptText="Select thread type..."
                      maxWidth="Infinity" prefWidth="Infinity"
                      style="-fx-font-size: 14;"/>
        </VBox>

        <!-- Content Area -->
        <VBox spacing="5" VBox.vgrow="ALWAYS">
            <Label text="Content *" style="-fx-font-weight: bold;">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <TextArea fx:id="contentArea" promptText="Write your thread content here..."
                      wrapText="true" prefRowCount="3"
                      style="-fx-font-size: 14;">
                <padding>
                    <Insets top="8" right="10" bottom="8" left="10"/>
                </padding>
            </TextArea>
        </VBox>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f9f9f9; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">

            <Label text="ðŸ“· Attach Image (Optional)" style="-fx-font-weight: bold; -fx-font-size: 14;"/>

            <!-- Image Preview -->
            <ImageView fx:id="imagePreview"
                       fitWidth="100"
                       fitHeight="75"
                       preserveRatio="true"
                       visible="false"
                       style="-fx-border-color: #ddd; -fx-border-width: 1;"/>

            <!-- Upload Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="uploadImageButton"
                        text="ðŸ“ Choose Image"
                        onAction="#onUploadImage"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand;"/>

                <Button fx:id="removeImageButton"
                        text="âœ– Remove"
                        onAction="#onRemoveImage"
                        visible="false"
                        managed="false"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand;"/>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="imageStatusLabel"
                   text=""
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

            <!-- Info -->
            <Label text="â„¹ï¸ Supported: JPG, PNG, GIF, BMP, WEBP (Max 32MB)"
                   style="-fx-font-size: 11px; -fx-text-fill: #999;"/>
        </VBox>
        <!-- Pinned Checkbox (Only for Admin) -->
        <HBox fx:id="pinnedContainer" spacing="5" visible="false" managed="false">
            <CheckBox fx:id="pinnedCheck" text="ðŸ“Œ Pin this thread to the top">
                <font>
                    <Font size="14"/>
                </font>
            </CheckBox>
        </HBox>

        <Separator/>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Cancel" onAction="#cancel"
                    style="-fx-background-color: #f0f0f0; -fx-text-fill: #333; -fx-font-size: 14; -fx-padding: 10 20 10 20; -fx-background-radius: 5;"/>
            <Button fx:id="publishButton" text="Publish Thread" onAction="#publish"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 10 20 10 20; -fx-background-radius: 5;"/>
        </HBox>

    </VBox>

    <!-- Footer Note -->
    <Label text="* Required fields" style="-fx-text-fill: #888; -fx-font-size: 12;"/>

</VBox>
