<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.serinity.forumcontrol.Controllers.ThreadDetailController"
      style="-fx-background-color: #f5f5f5;">

    <!-- Header with Back Button -->
    <HBox alignment="CENTER_LEFT"
          spacing="15"
          style="-fx-background-color: white;
                 -fx-padding: 15 20;
                 -fx-border-color: #e0e0e0;
                 -fx-border-width: 0 0 2 0;">

        <Button text="â¬… Back to Posts"
                onAction="#goBack"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #2196F3;
                       -fx-font-size: 14;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;
                       -fx-border-color: #2196F3;
                       -fx-border-width: 1;
                       -fx-border-radius: 5;
                       -fx-background-radius: 5;
                       -fx-padding: 8 15;"/>
    </HBox>

    <!-- Main Content -->
    <ScrollPane fitToWidth="true"
                style="-fx-background-color: transparent;
                       -fx-border-color: transparent;"
                VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Thread Card -->
                <VBox spacing="15"
                      style="-fx-background-color: white;
                             -fx-padding: 25;
                             -fx-background-radius: 10;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                    <!-- Author and Date Info -->
                    <Label fx:id="lfoukLabel"
                           wrapText="true"
                           style="-fx-text-fill: #2b2a2a;
                                  -fx-font-size: 13;"/>

                    <Separator style="-fx-background-color: #f0f0f0;"/>

                    <!-- Thread Metadata -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label fx:id="Category"
                               style="-fx-background-color: #E3F2FD;
                                      -fx-text-fill: #1976D2;
                                      -fx-padding: 5 12;
                                      -fx-background-radius: 15;
                                      -fx-font-size: 12;
                                      -fx-font-weight: bold;"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Label fx:id="metaLabel"
                               style="-fx-text-fill: #1b1818;
                                      -fx-font-size: 12;"/>
                    </HBox>

                    <Separator style="-fx-background-color: #f0f0f0;"/>

                    <!-- Thread Title -->
                    <Label fx:id="titleLabel"
                           wrapText="true"
                           style="-fx-font-size: 24;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #212121;"/>

                    <!-- Thread Content -->
                    <TextArea fx:id="contentArea"
                              editable="false"
                              wrapText="true"
                              prefHeight="300"
                              style="-fx-background-color: #fafafa;
                                     -fx-border-color: transparent;
                                     -fx-font-size: 14;
                                     -fx-text-fill: #333;
                                     -fx-padding: 15;
                                     -fx-background-radius: 5;
                                     -fx-control-inner-background: #fafafa;"/>

                    <Separator style="-fx-background-color: #f0f0f0;"/>

                    <!-- Interaction Buttons -->
                    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">

                        <!-- Upvote Button -->
                        <HBox spacing="8" alignment="CENTER"
                              style="-fx-background-color: #f5f5f5;
                                     -fx-padding: 8 15;
                                     -fx-background-radius: 20;
                                     -fx-cursor: hand;"
                              onMouseClicked="#onUpvote">
                            <Button fx:id="upvoteButton"
                                    text="ðŸ‘"
                                    style="-fx-background-color: transparent;
                                           -fx-font-size: 18;
                                           -fx-cursor: hand;
                                           -fx-padding: 0;"/>
                            <Label fx:id="upvoteCount"
                                   text="0"
                                   style="-fx-font-size: 14;
                                          -fx-font-weight: bold;
                                          -fx-text-fill: #666;"/>
                        </HBox>

                        <!-- Downvote Button -->
                        <HBox spacing="8" alignment="CENTER"
                              style="-fx-background-color: #f5f5f5;
                                     -fx-padding: 8 15;
                                     -fx-background-radius: 20;
                                     -fx-cursor: hand;"
                              onMouseClicked="#onDownvote">
                            <Button fx:id="downvoteButton"
                                    text="ðŸ‘Ž"
                                    style="-fx-background-color: transparent;
                                           -fx-font-size: 18;
                                           -fx-cursor: hand;
                                           -fx-padding: 0;"/>
                            <Label fx:id="downvoteCount"
                                   text="0"
                                   style="-fx-font-size: 14;
                                          -fx-font-weight: bold;
                                          -fx-text-fill: #666;"/>
                        </HBox>

                        <!-- Net Votes Display -->
                        <Label fx:id="netVotesLabel"
                               text="0 points"
                               style="-fx-font-size: 14;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #2196F3;
                                      -fx-padding: 8 15;"/>

                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="repliescountLabel"
                               text="0 points"
                               style="-fx-font-size: 14;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #051261;
                                      -fx-padding: 8 15;"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <!-- Follow Button -->
                        <Button fx:id="followButton"
                                text="â­ Follow"
                                onAction="#onToggleFollow"
                                style="-fx-background-color: #2196F3;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14;
                                       -fx-font-weight: bold;
                                       -fx-padding: 10 20;
                                       -fx-background-radius: 20;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 0, 2);"/>

                        <!-- Follower Count -->
                        <Label fx:id="followerCountLabel"
                               text="0 followers"
                               style="-fx-font-size: 13;
                                      -fx-text-fill: #666;
                                      -fx-padding: 8 0;"/>
                    </HBox>
                </VBox>

                <!-- Replies Section -->
                <VBox spacing="15">

                    <!-- Replies Header -->
                    <HBox alignment="CENTER_LEFT"
                          spacing="10"
                          style="-fx-padding: 0 5;">
                        <Label fx:id="Replies"
                               style="-fx-font-size: 18;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #212121;"/>

                        <Separator HBox.hgrow="ALWAYS"
                                   style="-fx-background-color: #e0e0e0;"/>
                    </HBox>

                    <!-- Replies List -->
                    <VBox fx:id="repliesBox"
                          spacing="12"
                          style="-fx-padding: 0;"/>

                    <!-- Reply Input Card -->
                    <VBox spacing="12"
                          style="-fx-background-color: white;
                                 -fx-padding: 20;
                                 -fx-background-radius: 10;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                        <Label text="Add a Reply"
                               style="-fx-font-size: 16;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #212121;"/>

                        <TextArea fx:id="replyArea"
                                  prefHeight="100"
                                  promptText="Write your reply here..."
                                  wrapText="true"
                                  style="-fx-font-size: 14;
                                         -fx-border-color: #e0e0e0;
                                         -fx-border-radius: 5;
                                         -fx-background-radius: 5;
                                         -fx-padding: 12;
                                         -fx-prompt-text-fill: #999;"/>

                        <HBox alignment="CENTER_RIGHT">
                            <Button onAction="#addReply"
                                    text="ðŸ“ Post Reply"
                                    style="-fx-background-color: #4CAF50;
                                           -fx-text-fill: white;
                                           -fx-font-size: 14;
                                           -fx-font-weight: bold;
                                           -fx-padding: 10 25;
                                           -fx-background-radius: 5;
                                           -fx-cursor: hand;
                                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 0, 2);"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Bottom Spacing -->
                <Region prefHeight="20"/>

            </VBox>
        </content>
    </ScrollPane>
</VBox>
